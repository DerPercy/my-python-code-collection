{% extends "base.jinja2" %}

{% block content %}
    <table>
        {% for game in data.upcoming_games %}
            <tr>
                <td colspan="1"><b>{{game.gameSlug}}</b></td>
            </tr>
                {% for player in game.topTeam %}
                    <tr><td>{{player.name}} ({{player.position}})
                        {% if player.slug == game.captainSlug %}
                            <b>Captain</b>
                        {% endif %}
                    </td></tr>
                {% endfor %} 
            <tr><td>{{game.topTeamTactics}}</td></tr>       
        {% endfor %}
    </table>
{% endblock %}